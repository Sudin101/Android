<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".showfulljobpost">

    <ScrollView
        android:id="@+id/tv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/jobname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_photo"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Job Title"
                android:enabled="false"
                android:textColorHighlight="@color/colorPrimary"
                android:textColor="#000"
                android:textSize="25dp"
                android:hint="jobname"
                android:background="@drawable/bg_ux"/>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jobname"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="25dp"
                android:hint="jobname"/>


            <Button
                android:id="@+id/Applicantno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Applicant no"
                android:enabled="false"
                android:textColorHighlight="@color/colorPrimary"
                android:textColor="#000"
                android:textSize="25dp"
                android:hint="jobname"
                android:background="@drawable/bg_ux"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Applicantno"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_price"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Deadline"
                android:enabled="false"
                android:textColorHighlight="@color/colorPrimary"
                android:textColor="#000"
                android:textSize="25dp"
                android:hint="jobname"
                android:background="@drawable/bg_ux"/>

            <TextView
                android:id="@+id/categoryes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Deadline"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColorHighlight="@drawable/bg_ux"
                android:textColor="#000"
                android:textSize="25dp" />
            <Button
                android:id="@+id/descriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categoryes"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Description"
                android:enabled="false"
                android:textColorHighlight="@color/colorPrimary"
                android:textColor="#000"
                android:textSize="25dp"
                android:hint="jobname"
                android:background="@drawable/bg_ux"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptions"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_description"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="25dp"

                />

            <Button
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="apply"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_ui"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>