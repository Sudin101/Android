<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobpost"
    android:background="@color/colorWhite">

    <EditText
        android:id="@+id/postname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_image"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:hint="Post Name"
        android:textSize="20sp"
        android:textColorHint="#000"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/applicantno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postname"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:hint="Applicant no"
        android:inputType="number"
        android:textSize="20sp"
        android:textColorHint="#000"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/applicantno"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:hint="Deadline (yy/mm/dd)"
        android:inputType="date"
        android:textSize="20sp"
        android:textColorHint="#000"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deadline"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:hint="category"
        android:inputType="date"
        android:textSize="20sp"
        android:textColorHint="#000"
        android:textColor="@color/colorPrimary"/>


    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/category"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:hint="Item Description"
        android:inputType="textMultiLine"
        android:textColorHint="#131212"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_addpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"

        android:text="update"
        android:textSize="20sp"
        android:background="@drawable/bg_ui"
        android:textColor="@color/colorPrimaryDark"/>


</RelativeLayout>